        <StackLayout Margin="0,40,0,0">
            <Label Text="Flex"
                HorizontalOptions="CenterAndExpand" 
                FontSize="20" />

            <FlexLayout  AlignItems="Center"
                         Direction="Column"
                         JustifyContent="Center">
                
                <Label Text="Item 1"
                FontSize="20" />
                
                <Label Text="Item 2"
                FontSize="25" />


                <Label Text="Item 3"
                FontSize="30" />
                                
                <Label Text="Item 4"
                FontSize="35" />

                <Button Text="Boton 1" FontSize="35"/>

                <Image Source="https://vignette.wikia.nocookie.net/joke-battles/images/7/70/Chuck.jpg/revision/latest?cb=20180613043330"
                      WidthRequest="250" HeightRequest="250" />
                

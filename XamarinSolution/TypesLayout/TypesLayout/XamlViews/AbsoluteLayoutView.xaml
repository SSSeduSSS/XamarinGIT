<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypesLayout.XamlViews.AbsoluteLayoutView">
    <ContentPage.Content>
        <AbsoluteLayout >
            <Label Text="Absolute Layout"
                   FontSize="20"
                   TextColor="Red"
                   AbsoluteLayout.LayoutBounds="0.2,0.6,80,20"
                AbsoluteLayout.LayoutFlags="PositionProportional"/>
            
            <BoxView                  
                
                AbsoluteLayout.LayoutBounds="0.25,0.7,100,25"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                BackgroundColor="Fuchsia"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaginasBindings.TabbedPage1">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="rojo" >
        <StackLayout>
            <Label Text="Label Rojo" VerticalOptions="CenterAndExpand"/>
            <BoxView Color="Red" WidthRequest="200"
                     HeightRequest="200"/>
        </StackLayout>
    </ContentPage>

    <ContentPage Title="verde" >
        <StackLayout>
            <Label Text="Label verde" VerticalOptions="CenterAndExpand"/>
            <BoxView Color="Green" WidthRequest="200"
                     HeightRequest="200"/>
        </StackLayout>
    </ContentPage>

    <ContentPage Title="amarillo" >
        <StackLayout>
            <Label Text="Label amarillo" VerticalOptions="CenterAndExpand"/>
            <BoxView Color="Yellow" WidthRequest="200"
                     HeightRequest="200"/>
        </StackLayout>
    </ContentPage>

    <ContentPage Title="Azul" >
        <StackLayout>
            <Label Text="Label azul" VerticalOptions="CenterAndExpand"/>
            <BoxView Color="Blue" WidthRequest="200"
                     HeightRequest="200"/>
        </StackLayout>
    </ContentPage>
</TabbedPage>
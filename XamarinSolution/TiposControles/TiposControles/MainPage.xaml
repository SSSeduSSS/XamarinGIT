             xmlns:local="clr-namespace:TiposControles"
             x:Class="TiposControles.MainPage">

    <ContentPage.Content>

        <StackLayout Margin="0,40,0,0">
            <!-- Place new controls here -->
            <Label FontAttributes="Bold"

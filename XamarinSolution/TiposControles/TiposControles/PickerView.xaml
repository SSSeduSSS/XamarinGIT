<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiposControles.PickerView">
    <ContentPage.Content>
        <StackLayout Margin="0,40,0,0">
            
            <Label Text="Seleccione un ingrediente"
                HorizontalOptions="FillAndExpand" />
            
            <Picker x:Name="picker1" HorizontalOptions="FillAndExpand"/>

            <Label FontSize="20" TextColor="Chartreuse"
                   x:Name="lblPicker"
                   HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>